{
    "kind": "Template",
    "apiVersion": "template.openshift.io/v1",
    "metadata": {
        "name": "valeria-jupyterhub-deployer",
        "annotations": {
            "openshift.io/display-name": "Valeria JupyterHub Deployer",
            "description": "Template for deploying a Valeria JupyterHub instance.",
            "iconClass": "icon-valeria",
            "tags": "python,jupyter,jupyterhub"
        }
    },
    "parameters": [
        {
            "name": "APPLICATION_NAME",
            "value": "jupyterhub",
            "required": true
        },
        {
            "name": "JUPYTERHUB_IMAGE",
            "value": "jupyterhub-valeria:tag",
            "required": true
        },
        {
            "name": "JUPYTERHUB_SERVICE_NAME",
            "value": "jupyterhub",
            "required": true
        },
        {
            "name": "JUPYTERHUB_MEMORY",
            "description": "Amount of memory available to JupyterHub.",
            "value": "512Mi",
            "required": true
        },
        {
            "name": "JUPYTERHUB_DATABASE_HOST",
            "value": "",
            "required": true
        },
        {
            "name": "JUPYTERHUB_DATABASE_NAME",
            "value": "",
            "required": true
        },
        {
            "name": "JUPYTERHUB_NOTEBOOK_IMAGE",
            "value": "s2i-minimal-notebook:3.6",
            "required": true
        },
        {
            "name": "JUPYTERHUB_NOTEBOOK_MEMORY",
            "value": "512Mi",
            "required": true
        },
        {
            "name": "JUPYTERHUB_IDLE_TIMEOUT",
            "value": "3600",
            "required": false
        },
        {
            "name": "JUPYTERHUB_ADMIN_USERS",
            "value": "",
            "required": false
        },
        {
            "name": "JUPYTERHUB_CONFIG",
            "value": "",
            "required": false
        },
        {
            "name": "KEYCLOAK_HOSTNAME",
            "value": "",
            "required": false
        },
        {
            "name": "KEYCLOAK_REALM",
            "value": "",
            "required": false
        },
        {
            "name": "OAUTH2_TOKEN_URL",
            "value": "",
            "required": true
        },
        {
            "name": "OAUTH2_USERDATA_URL",
            "value": "",
            "required": true
        },
        {
            "name": "OAUTH2_USERNAME_KEY",
            "value": "",
            "required": true
        },
        {
            "name": "VAULT_URL",
                "value": "",
            "required": true
        },
        {
            "name": "S3_ENDPOINT_URL",
            "value": "",
            "required": true
        },
        {
            "name": "S3_BUCKET",
            "value": "jupyter-bucket",
            "required": true
        }
    ],
    "objects": [
        {
            "kind": "ConfigMap",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-cfg",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "data": {
                "jupyterhub_config.py": "${JUPYTERHUB_CONFIG}",
                "admin_users.txt": "${JUPYTERHUB_ADMIN_USERS}"
            }
        },
        {
            "kind": "ServiceAccount",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-hub",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            }
        },
        {
            "kind": "RoleBinding",
            "apiVersion": "authorization.openshift.io/v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-edit",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "subjects": [
                {
                    "kind": "ServiceAccount",
                    "name": "${APPLICATION_NAME}-hub"
                }
            ],
            "roleRef": {
                "apiGroup": "rbac.authorization.k8s.io",
		        "kind": "ClusterRole",
                "name": "edit"
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "apps.openshift.io/v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "wait-for-database",
                                "jupyterhub"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${JUPYTERHUB_IMAGE}"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "selector": {
                    "app": "${APPLICATION_NAME}",
                    "deploymentconfig": "${APPLICATION_NAME}"
                },
                "template": {
                    "metadata": {
                        "annotations": {
                            "alpha.image.policy.openshift.io/resolve-names": "*"
                        },
                        "labels": {
                            "app": "${APPLICATION_NAME}",
                            "deploymentconfig": "${APPLICATION_NAME}"
                        }
                    },
                    "spec": {
                        "serviceAccountName": "${APPLICATION_NAME}-hub",
                        "initContainers": [
                            {
                                "name": "wait-for-database",
                                "image": "${JUPYTERHUB_IMAGE}",
                                "command": [ "wait-for-database" ],
                                "resources": {
                                    "limits": {
                                        "memory": "${JUPYTERHUB_MEMORY}"
                                    }
                                },
                                "env": [
                                    {
                                        "name": "JUPYTERHUB_DATABASE_USER",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "valeria-jupyterhub-secrets",
                                                "key": "database_username"
                                            }
                                        }
                                    },
                                    {
                                        "name": "JUPYTERHUB_DATABASE_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "valeria-jupyterhub-secrets",
                                                "key": "database_password"
                                            }
                                        }
                                    },
                                    {
                                        "name": "JUPYTERHUB_DATABASE_HOST",
                                        "value": "${JUPYTERHUB_DATABASE_HOST}"
                                    },
                                    {
                                        "name": "JUPYTERHUB_DATABASE_NAME",
                                        "value": "${JUPYTERHUB_DATABASE_NAME}"
                                    }
                                ]
                            }
                        ],
                        "containers": [
                            {
                                "name": "jupyterhub",
                                "image": "${JUPYTERHUB_IMAGE}",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "memory": "${JUPYTERHUB_MEMORY}"
                                    }
                                },
                                "env": [
                                    {
                                        "name": "APPLICATION_NAME",
                                        "value": "${APPLICATION_NAME}"
                                    },
                                    {
                                        "name": "JUPYTERHUB_NOTEBOOK_IMAGE",
                                        "value": "${JUPYTERHUB_NOTEBOOK_IMAGE}"
                                    },
                                    {
                                        "name": "JUPYTERHUB_NOTEBOOK_MEMORY",
                                        "value": "${JUPYTERHUB_NOTEBOOK_MEMORY}"
                                    },
                                    {
                                        "name": "JUPYTERHUB_DATABASE_USER",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "valeria-jupyterhub-secrets",
                                                "key": "database_username"
                                            }
                                        }
                                    },
                                    {
                                        "name": "JUPYTERHUB_DATABASE_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "valeria-jupyterhub-secrets",
                                                "key": "database_password"
                                            }
                                        }
                                    },
                                    {
                                        "name": "JUPYTERHUB_DATABASE_HOST",
                                        "value": "${JUPYTERHUB_DATABASE_HOST}"
                                    },
                                    {
                                        "name": "JUPYTERHUB_DATABASE_NAME",
                                        "value": "${JUPYTERHUB_DATABASE_NAME}"
                                    },
                                    {
                                        "name": "JUPYTERHUB_COOKIE_SECRET",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "valeria-jupyterhub-secrets",
                                                "key": "cookie_secret"
                                            }
                                        }
                                    },
                                    {
                                        "name": "JUPYTERHUB_CRYPT_KEY",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "valeria-jupyterhub-secrets",
                                                "key": "crypt_key"
                                            }
                                        }
                                    },
                                    {
                                        "name": "JUPYTERHUB_ADMIN_USERS",
                                        "value": "${JUPYTERHUB_ADMIN_USERS}"
                                    },
                                    {
                                        "name": "JUPYTERHUB_SERVICE_NAME",
                                        "value": "${JUPYTERHUB_SERVICE_NAME}"
                                    },
                                    {
                                        "name": "JUPYTERHUB_IDLE_TIMEOUT",
                                        "value": "${JUPYTERHUB_IDLE_TIMEOUT}"
                                    },
                                    {
                                        "name": "KEYCLOAK_HOSTNAME",
                                        "value": "${KEYCLOAK_HOSTNAME}"
                                    },
                                    {
                                        "name": "KEYCLOAK_REALM",
                                        "value": "${KEYCLOAK_REALM}"
                                    },
                                    {
                                        "name": "OAUTH_CLIENT_ID",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "valeria-jupyterhub-secrets",
                                                "key": "oauth_client_id"
                                            }
                                        }
                                    },
                                    {
                                        "name": "OAUTH_CLIENT_SECRET",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "valeria-jupyterhub-secrets",
                                                "key": "oauth_client_secret"
                                            }
                                        }
                                    },
                                    {
                                        "name": "OAUTH2_TOKEN_URL",
                                        "value": "${OAUTH2_TOKEN_URL}"
                                    },
                                    {
                                        "name": "OAUTH2_USERDATA_URL",
                                        "value": "${OAUTH2_USERDATA_URL}"
                                    },
                                    {
                                        "name": "OAUTH2_USERNAME_KEY",
                                        "value": "${OAUTH2_USERNAME_KEY}"
                                    },
                                    {
                                        "name": "S3_ENDPOINT_URL",
                                        "value": "${S3_ENDPOINT_URL}"
                                    },
                                    {
                                        "name": "S3_BUCKET",
                                        "value": "${S3_BUCKET}"
                                    },
                                    {
                                        "name": "VAULT_URL",
                                        "value": "${VAULT_URL}"
                                    }
                                ],
                                "volumeMounts": [
                                    {
                                        "name": "config",
                                        "mountPath": "/opt/app-root/configs"
                                    }
                                ]
                            }
                        ],
                        "volumes": [
                            {
                                "name": "config",
                                "configMap": {
                                    "name": "${APPLICATION_NAME}-cfg",
                                    "defaultMode": 420
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "8080-tcp",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    },
                    {
                        "name": "8081-tcp",
                        "protocol": "TCP",
                        "port": 8081,
                        "targetPort": 8081
                    }
                ],
                "selector": {
                    "app": "${APPLICATION_NAME}",
                    "deploymentconfig": "${APPLICATION_NAME}"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "route.openshift.io/v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "host": "",
                "to": {
                    "kind": "Service",
                    "name": "${APPLICATION_NAME}",
                    "weight": 100
                },
                "port": {
                    "targetPort": "8080-tcp"
                },
                "tls": {
                    "termination": "edge",
                    "insecureEdgeTerminationPolicy": "Redirect"
                }
            }
        }
    ]
}
